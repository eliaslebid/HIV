extends ../shared/_layout
include ../components/_modal-form-sent

block vars
	-
		var page = "send-form"

block content
	.container
		.form__top
			.form__help
				.form__title Как заказать доставку
				.form__description
					| Для того, чтобы заказть тест выберите удобный способ доставки
					| и заполните соответствующие поля. Сроки доставки посылки 1-3 дней от даты отправки.
			.form__hint
				.form__hint-title
					| Контактные данные
				.form__hint-footnote
					| * при получении необходимо предьявить документ
		form(action="#").form__aux.js-registration-form
			.form__form-fields
				div.form__field
					label.form__label-title Фамилия
					input(type="text" name="surname" js-validate = '')
				div.form__field
					label.form__label-title Имя
					input(type="text" name="name" js-validate = '')
				div.form__field
					label.form__label-title Отчество
					input(type="text" name="patronymic" js-validate = '')
				div.form__field
					label.form__label-title Номер телефона
					input(type="tel" name="phone	" js-validate = '')
				.p.form__title.form__title--margin-top-50
					| Способ доставки
				div.form__field.form__field--row.form__field--radio
					input(type="radio" id="byPostOffice" name="delivery" js-validate = '').form__radio
					span.checkmark
					label(for="byPostOffice").form__label-title В почтовое отделение (27 грн)
				div.form__field.form__field--row.form__field--radio
					input(type="radio" id="byDelivery" name="delivery" js-validate = '').form__radio
					span.checkmark
					label(for="byDelivery").form__label-title По адресу (36 грн)
				.p.form__title.form__title--margin-top-80
					| Адрес получателя
				div.form__field
					label.form__label-title Область
					select(id="js-region-select" class="" placeholder="Выберете область")
						option(value="") Выберете область
						option(value="1") Киевская
						option(value="2") Киев
						option(value="3") Черниговская
						option(value="4") Хмельницкая
				div.form__field
					label.form__label-title Район
					select(id="js-area-select" class="demo-default" placeholder="Выберете область")
						option(value="") Выберете область
						option(value="1") 1
						option(value="2") 2
						option(value="3") 3
						option(value="4") 4
				div.form__field
					label.form__label-title Населенный пункт
					select(id="js-locality-select" class="demo-default" placeholder="Выберете область")
						option(value="") Выберете область
						option(value="1") 1
						option(value="2") 2
						option(value="3") 3
						option(value="4") 4
				div.form__field
					label.form__label-title Улица
					input(type="text" name="street" js-validate = '')
				div.form__field
					label.form__label-title Номер дома
					input(type="text" name="house_number" js-validate = '')
				div.form__field
					label.form__label-title Номер квартиры
					input(type="text" name="appt_number" js-validate = '')
				div.form__field
					label.form__label-title Почтовый индекс
					input(type="text" name="postcode" js-validate = '')
				.form__cta(data-toggle="modal" data-target="#exampleModal")
					| Оформить заказ
	+sent-modal()
