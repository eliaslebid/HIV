* {
	box-sizing: border-box
	outline: none
}

a {
	color: inherit
	text-decoration: none
	&:hover, &:focus {
		color: inherit;
		text-decoration: none!important;
	}
}

input {
	-webkit-appearance: none;
}

p {
	margin-bottom: 0!important
}

body, html {
	background: #fff
	color: #888
	font-family: "Museo Sans Cyrillic", Arial, sans-serif
	font-size: 14px
	min-width: 320px
	max-width: 100%
	margin: 0
	overflow-x: hidden
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale

	&.modal-open {
		overflow: hidden;
		position: fixed;
	}
}


.page {
	display: flex
	flex-direction: column
	min-height: 100vh
	transition: all 0.5s

	&__content {
		flex: 1 0 auto
		display: flex
		flex-direction: column
		padding-top: 0

		+r(tablet) {
			padding-top: 0
		}
	}

	&--fade {
		opacity: 0 !important
	}
}


.container {
	max-width: 1140px
	width: 100%
	margin-left: auto
	margin-right: auto
	padding-left: 5px
	padding-right: 5px

	+r(tablet) {
		padding-left: 15px;
		padding-right: 15px;
	}
}

for i in (1..6) {
	h{i} {
		margin: 0
		padding: 0
	}
}

ul {
	margin: 0
	padding: 0
}

p {
	margin: 0
}

button {
	border: 0;
	cursor pointer;
}

.d-flex {
	display: flex
}

.overflow {
	&--hidden {
		overflow: hidden
	}
}


