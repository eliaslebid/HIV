// INDEX
.page-navigator {
	position: fixed;
	z-index: 10;
	right: 30px;
	top: 50%;
	transform: translateY(-50%);
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 100%;
	min-width: 30px;

	&__section {
		display: inline-flex;

		&:not(.page-navigator__section--active)::before {
			content: "";
			display: inline-flex;
			width: 10px;
			height: 1px;
			background-color: #5e5e5e;
			cursor: pointer;
			margin: 5px 0;
			transition: all 0.3s;
		}

		&--active {
			padding-top: 5px;

			&::before {
				content: "";
				display: inline-flex;
				width: 20px;
				height: 1px;
				background-color: #f9333f;
				margin-top: 9px;
				margin-bottom: 7px;
				transition: all 0.3s;
			}
		}
	}

	&__wrapper {
		display: flex;
		flex-direction: column;
		position: relative;
		overflow: hidden;
	}

	&__current-number {
		display: none;
		opacity: 0;
		transition: all 0.3s;
		text-align: center;
		transform: translate(-50%, 160%);
		font-size: 12px;
		color: #ffffff;

		&--active {
			display: block;
			position: absolute;
			opacity: 1;
			transition: all 0.3s;
			top: 0;
			left: 50%;
			transform: translate(-50%, -7%);
		}
	}
}

polygon {
	transition: all 0.3s;
	cursor: pointer;
}

.cursor {
	&--auto {
		cursor: auto !important;
	}
}

@keyframes scroll {
	0% {
		opacity: 1;
		transform: translateY(0);
	}

	100% {
		opacity: 0;
		transform: translateY(12px);
	}

}

+r(desktop) {
	.page-navigator {
		margin: 0;
	}
}

+r(tablet) {
	.page-navigator {
		display: none;
		visibility: hidden;
		opacity: 0;
	}
}
