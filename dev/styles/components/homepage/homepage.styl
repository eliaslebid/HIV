.homepage {
	padding-top: 15px;

	.accordion {
		margin-top 81px;

		&__title {
			position relative;
			color: #383838;
			font-size: 24px;
			font-weight 700;
			letter-spacing: 0;
			line-height: 41px;
			cursor pointer;

			&::before {
				content: '';
				position absolute;
				left: 0;
				bottom: 0;
				width: 100%;
				height: 2px;
				background-color: #EFF2F7;
			}

			&::after {
				border-style: solid;
				border-width: 0.10em 0.10em 0 0;
				border-color: #BFCCE1;
				content: '';
				display: inline-block;
				height: 0.45em;
				right: 0.15em;
				position: absolute;
				top: 30%;
				transform: rotate(135deg);
				transition: all .3s;
				vertical-align: top;
				width: 0.45em;
			}

			&.active {
				&::after {
					top: 50%;
					transform: rotate(-45deg);
				}
			}
		}

		&__item {
			&:not(:first-child) {
				margin-top 25px;
			}
		}

		&__panel {
			display: none;
			overflow hidden;
			margin-top 28px;
		}

		&__paragraph {
			font-size: 16px;
			letter-spacing: 0;
			line-height: 26px;

			&:not(:first-child) {
				margin-top: 6px;
			}

			&--highlight {
				color: #D6333C;
			}
		}

		&__enum {
			margin-top: 12px;
			list-style-type: circle;
			padding-left: 20px;
		}

		&__enum-item {
			list-style: disc outside none;
			display: list-item;
			list-style-type: disc;
		}
	}

	.package {
		margin-top 45px;
		background url(/img/package-arms.png);
		background-repeat no-repeat;
		background-position: right top 65px;
		background-size auto;

		&__title {
			font-size: 24px;
			font-weight 700;
			color: #383838;
			letter-spacing: 0;
			line-height: 41px;
			margin-bottom 243px;
		}

		&__description {
			font-size: 16px;
			color: #383838;
			letter-spacing: 0;
			line-height: 26px;
		}
	}

	&__cta {
		send-button()
		padding: 7px 35px 12px 35px;
	}
}
