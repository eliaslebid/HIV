.form {
	padding-top: 15px;

	&__top {
		margin-top 85px;
	}

	&__help-title {
		font-size: 26px;
		font-weight 700;
		color: #383838;
		letter-spacing: 0;
		line-height: 41px;
	}

	&__description {
		font-size: 16px;
		font-weight 300;
		color: #383838;
		letter-spacing: 0;
		line-height: 26px;
	}

	&__hint {
		font-size: 20px;
		font-weight 700;
		color: #383838;
		letter-spacing: 0;
		line-height: 41px;
		margin-top 50px;
	}

	&__hint-footnote {
		font-size: 12px;
		font-weight 300;
		color: #383838;
		letter-spacing: 0;
		line-height: 18px;
	}

	&__form-fields {
		width: 290px;
	}

	&__field {
		display: flex;
		flex-direction column;
		align-items flex-start;

		&:first-child {
			margin-top 17px;
		}

		&--row {
			flex-direction row;
			align-items center;

			label {
				margin-bottom 0;
				margin-left 13px;
			}
		}

		input[type="text"], input[type="tel"] {
			font-size: 16px;
			font-weight 300;
			color: #000000;
			letter-spacing: 0;
			line-height: 18px;
			width: 100%;
			height 50px;
			border: 1px solid #BFCCE1;
			border-radius 8px;
		}
	}

	&__label-title {
		font-size: 14px;
		font-weight 300;
		color: #8294B2;
		letter-spacing: 0;
		line-height: 26px;
		margin-bottom 3px;
	}

	&__cta {
		send-button()
	}
}
